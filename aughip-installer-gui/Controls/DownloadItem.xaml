<UserControl x:Class="aughip_installer_gui.Controls.DownloadItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aughip_installer_gui.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="800" Height="48">
    <Grid>
        <StackPanel Margin="5,0">
            <Label x:Name="label" Content="Label" Foreground="{DynamicResource BrushForeground}"/>
            <ProgressBar x:Name="progressBar" Height="22" BorderBrush="{DynamicResource BrushButtonTransparent}" Background="{DynamicResource BrushSecondary}" Foreground="{DynamicResource BrushButtonPrimary}"/>
        </StackPanel>
    </Grid>
</UserControl>
